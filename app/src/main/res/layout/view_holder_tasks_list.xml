<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">
<androidx.appcompat.widget.AppCompatTextView
    android:textSize="@dimen/text_regular"
    android:textStyle="bold"
    android:textColor="@color/main_screen_page_task_list_title_color"
    android:layout_marginTop="-8dp"
    android:layout_gravity="center"
    android:text="12.23"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/spacing_small"
    android:layout_marginLeft="@dimen/spacing_small"
    android:gravity="center_horizontal"
    android:orientation="vertical">



    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/whiteDark10" />

    <ImageView
        android:layout_width="@dimen/spacing_middle"
        android:layout_height="@dimen/spacing_middle"
        android:layout_marginTop="@dimen/spacing_xxlarge"
        app:srcCompat="@drawable/shape_round_solid"
        app:tint="#9CCC65" />

</RelativeLayout>

<!--    <include-->
<!--        android:id="@+id/viewPodTaskItem"-->
<!--        android:layout_marginLeft="@dimen/spacing_middle"-->
<!--        android:layout_marginTop="@dimen/spacing_middle"-->
<!--        android:layout_marginRight="@dimen/spacing_middle"-->
<!--        android:layout_marginBottom="@dimen/spacing_medium"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        layout="@layout/view_pod_task_item"/>-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_middle"
        android:layout_marginTop="@dimen/spacing_middle"
        android:layout_marginRight="@dimen/spacing_middle"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:visibility="visible"
        app:cardCornerRadius="10dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginRight="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvStatus"
                    android:textSize="@dimen/text_regular"
                    android:textStyle="bold"
                    android:textColor="@color/in_progress_button_bg_color"
                    android:text="In progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/main_screen_page_task_list_title_color"
                    android:id="@+id/lblDesign"
                    android:textSize="@dimen/text_regular"
                    android:textStyle="bold"
                    android:text="#Design"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPageTitle"
                android:textColor="@color/rv_item_title_txt_color"
                android:textStyle="bold"
                android:textSize="@dimen/text_regular_3x"
                android:text="Contact page"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginRight="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <RelativeLayout
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView

                    android:layout_centerVertical="true"
                    android:layout_alignBaseline="@id/rvProfileImage"
                    android:id="@+id/ivMessageCount"
                    android:src="@drawable/ic_message_24"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/ivMessageCount"
                    android:layout_centerVertical="true"
                    android:layout_alignBaseline="@id/rvProfileImage"
                    android:id="@+id/tvMessageCount"
                    android:textSize="@dimen/text_regular"
                    android:textColor="@color/rv_item_title_txt_color"
                    android:textStyle="bold"
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_toEndOf="@id/tvMessageCount"
                    android:layout_centerVertical="true"
                    android:layout_alignBaseline="@id/rvProfileImage"
                    android:id="@+id/ivProfile"

                    android:src="@drawable/ic_attachment_24"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/ivProfile"
                    android:textColor="@color/rv_item_title_txt_color"
                    android:textStyle="bold"
                    android:id="@+id/tvAttachCount"
                    android:textSize="@dimen/text_regular"
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:id="@+id/ivDot"
                    android:layout_toEndOf="@id/tvAttachCount"
                    android:layout_width="@dimen/spacing_medium"
                    android:layout_height="@dimen/spacing_medium"
                    app:srcCompat="@drawable/shape_round_solid"
                    app:tint="@color/red" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_toStartOf="@id/rvProfileImage"
                    android:id="@+id/tvData"
                    android:textSize="@dimen/text_regular"
                    android:textColor="@color/rv_item_title_txt_color"
                    android:textStyle="bold"
                    android:text="N 163"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView

                    tools:listitem="@layout/view_holder_profile_image"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/rvProfileImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>