<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FF344655"
    style="?attr/bottomSheetStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="false"
    app:behavior_peekHeight = "@dimen/margin_medium_3"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <androidx.appcompat.widget.AppCompatImageView

        android:id="@+id/ivCancel"
        android:layout_margin="@dimen/margin_medium"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_close_24"
        android:layout_width="35dp"
        android:layout_height="35dp"/>
    <RelativeLayout

        android:id="@+id/rlProfileData"
        android:layout_below="@id/ivCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/custom_card_bg"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_width="match_parent"
            android:layout_height="125dp">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                   android:textColor="@color/profile_screen_tab_title_disable_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_regular"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/tvClosedTasks"
                    android:padding="@dimen/margin_medium"
                    android:text="Closed tasks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>
                <androidx.appcompat.widget.AppCompatTextView

                    android:textColor="@color/profile_screen_tab_title_disable_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_regular"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/tvOpenTasks"
                    android:padding="@dimen/margin_medium"
                    android:text="Open tasks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textStyle="bold"
                    android:textColor="@color/main_screen_page_title_color"
                    android:textSize="@dimen/text_regular"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/tvClosedTasksCount"
                    android:paddingLeft="@dimen/margin_medium"
                    android:paddingRight="@dimen/margin_medium"
                    android:text="361"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textStyle="bold"
                    android:textColor="@color/main_screen_page_title_color"
                    android:textSize="@dimen/text_regular"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_medium"
                    android:paddingRight="@dimen/margin_medium"
                    android:id="@+id/tvOpenTasksCount"

                    android:text="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



        </LinearLayout>
        <FrameLayout
            android:id="@+id/frameProfile"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.padcmyanmar.ttm.customviewassignmentapp.views.components.CircleImageView
                android:background="@drawable/image_shadow"
                app:cornerRadius="100dp"
                android:id="@+id/civProfile"
                app:borderWidth="5dp"
                app:strokeColor="@color/white"
                android:src="@drawable/profile_sample"
                android:scaleType="centerCrop"
                android:layout_width="125dp"
                android:layout_height="125dp"/>

            <ImageView
                android:layout_marginEnd="2dp"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:layout_gravity="center|end"
                android:id="@+id/ivDot"
                android:layout_width="@dimen/spacing_mlarge"
                android:layout_height="@dimen/spacing_mlarge"
                app:srcCompat="@drawable/shape_round_solid_border" />
        </FrameLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_below="@id/frameProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
               android:textSize="@dimen/text_regular_3x"
               android:textStyle="bold"
                android:textColor="@color/main_screen_page_title_color"
                android:text="Zachary Butler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView

                android:textColor="@color/profile_screen_tab_title_disable_color"
                android:textSize="@dimen/text_regular"
                android:textStyle="bold"
                android:text="UI Designer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>




    </RelativeLayout>


    <LinearLayout
        android:background="@color/white"
        android:layout_below="@id/rlProfileData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageButton
            android:src="@color/white"
            android:layout_width="10dp"
            android:layout_height="10dp"/>
    </LinearLayout>







</RelativeLayout>